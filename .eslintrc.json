{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "standard",
  "rules": {
    "indent": 0,
    "arrow-parens": 0,
    "generator-star-spacing": 0,

    "semi": 0,
    "space-before-function-paren": [0, "never"],
    "padded-blocks": 0,
    "no-trailing-spaces": 0,
    "no-undef": 0,
    "no-unused-vars": 0
  },
  "env": {
    "mocha": true
  }
}